<?xml version="1.0" encoding="utf-8"?>
<vector xmlns:android="http://schemas.android.com/apk/res/android"
    android:width="24dp"
    android:height="24dp"
    android:viewportWidth="300"
    android:viewportHeight="300">

    <group android:translateX="0" android:translateY="0">
        <!-- Termómetro base circular -->
        <path
            android:pathData="M150,220 m-30,0 a30,30 0,1 1,60 0 a30,30 0,1 1,-60 0"
            android:fillColor="#20D0C2"
            android:strokeWidth="8"
            android:strokeColor="#ffff" />

        <!-- Línea del termómetro -->
        <path
            android:pathData="M150,70 L150,190"
            android:strokeWidth="10"
            android:strokeColor="#20D0C2"
            android:fillColor="@android:color/transparent" />

        <!-- Marcas de grados -->
        <path
            android:pathData="M130,80 L145,80 M130,105 L145,105 M130,130 L145,130 M130,155 L145,155 M130,180 L145,180"
            android:strokeWidth="6"
            android:strokeColor="#FFFFFF"
            android:strokeLineCap="round"
            android:fillColor="@android:color/transparent" />

        <!-- Nivel del termómetro (mercurio) -->
        <path
            android:pathData="M150,220 L150,140"
            android:strokeWidth="5"
            android:strokeColor="#FF3333"
            android:fillColor="@android:color/transparent" />

        <!-- Tope superior -->
        <path
            android:pathData="M150,70 m-10,0 a10,10 0,1 1,20 0 a10,10 0,1 1,-20 0"
            android:fillColor="#20D0C2"
            android:strokeWidth="6"
            android:strokeColor="#ffff" />
    </group>
</vector>